<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:models="clr-namespace:ImageChecker_2.Models"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate DataType="{x:Type models:ImageFile}" x:Key="ImageListViewDataTemplate">
        <Border>
            <StackPanel>
                <Image Source="{Binding FileInfo.FullName}" Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ListBox}, Path=ActualWidth}" />
                <TextBlock Text="{Binding FileInfo.Name}" />
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>