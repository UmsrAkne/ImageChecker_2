<Window
    AllowDrop="True"
    Height="700"
    Title="{Binding Title}"
    Width="1024"
    d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
    mc:Ignorable="d"
    prism:ViewModelLocator.AutoWireViewModel="True"
    x:Class="ImageChecker_2.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:ImageChecker_2.Models"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:ImageChecker_2.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <i:Interaction.Behaviors>
        <models:DragAndDropBehavior />
    </i:Interaction.Behaviors>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ListViewTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Menu
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="0">
            <MenuItem Header="File" />
            <MenuItem Header="View" />
        </Menu>

        <StackPanel Grid.Column="0" Grid.Row="1">
            <Canvas
                Background="Blue"
                ClipToBounds="True"
                Height="{Binding PreviewContainer.Height}"
                Width="{Binding PreviewContainer.Width}">

                <Image
                    Canvas.Left="{Binding PreviewContainer.ActualX}"
                    Canvas.Top="{Binding PreviewContainer.ActualY}"
                    Source="{Binding PreviewContainer.ImageFileA.FileInfo.FullName}">
                    <Image.LayoutTransform>
                        <ScaleTransform ScaleX="{Binding PreviewContainer.ActualScale}" ScaleY="{Binding PreviewContainer.ActualScale}" />
                    </Image.LayoutTransform>
                </Image>

                <Image
                    Canvas.Left="{Binding PreviewContainer.ActualX}"
                    Canvas.Top="{Binding PreviewContainer.ActualY}"
                    Source="{Binding PreviewContainer.ImageFileD.FileInfo.FullName}">
                    <Image.LayoutTransform>
                        <ScaleTransform ScaleX="{Binding PreviewContainer.ActualScale}" ScaleY="{Binding PreviewContainer.ActualScale}" />
                    </Image.LayoutTransform>
                </Image>

                <Image
                    Canvas.Left="{Binding PreviewContainer.ActualX}"
                    Canvas.Top="{Binding PreviewContainer.ActualY}"
                    Source="{Binding PreviewContainer.ImageFileB.FileInfo.FullName}">
                    <Image.LayoutTransform>
                        <ScaleTransform ScaleX="{Binding PreviewContainer.ActualScale}" ScaleY="{Binding PreviewContainer.ActualScale}" />
                    </Image.LayoutTransform>
                </Image>

                <Image
                    Canvas.Left="{Binding PreviewContainer.ActualX}"
                    Canvas.Top="{Binding PreviewContainer.ActualY}"
                    Source="{Binding PreviewContainer.ImageFileC.FileInfo.FullName}">
                    <Image.LayoutTransform>
                        <ScaleTransform ScaleX="{Binding PreviewContainer.ActualScale}" ScaleY="{Binding PreviewContainer.ActualScale}" />
                    </Image.LayoutTransform>
                </Image>
            </Canvas>

            <TextBlock Text="Scale" />
            <TextBlock Text="{Binding PreviewContainer.Scale}" />

            <Slider
                IsSnapToTickEnabled="True"
                Maximum="5"
                Minimum="1"
                TickFrequency="1"
                Value="{Binding PreviewContainer.Scale}" />

            <TextBlock Text="X" />
            <TextBlock Text="{Binding PreviewContainer.X}" />

            <Slider
                IsSnapToTickEnabled="True"
                Maximum="4800"
                Minimum="-4800"
                TickFrequency="10"
                Value="{Binding PreviewContainer.X}" />

            <TextBlock Text="Y" />
            <Slider
                IsSnapToTickEnabled="True"
                Maximum="2700"
                Minimum="-2700"
                TickFrequency="10"
                Value="{Binding PreviewContainer.Y}" />

        </StackPanel>

        <Grid
            Grid.Column="1"
            Grid.Row="1"
            Grid.RowSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.Resources>
                <Style TargetType="ListBox" x:Key="ImageListBoxStyle">
                    <Setter Property="VirtualizingPanel.ScrollUnit" Value="Pixel" />
                    <Setter Property="ItemTemplate" Value="{StaticResource ImageListViewDataTemplate}" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
                    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Visible" />
                </Style>
            </Grid.Resources>

            <ListBox
                Grid.Column="0"
                ItemsSource="{Binding ImageContainerA.FilteredFiles}"
                Style="{StaticResource ImageListBoxStyle}" />

            <ListBox
                Grid.Column="1"
                ItemsSource="{Binding ImageContainerB.FilteredFiles}"
                Style="{StaticResource ImageListBoxStyle}" />

            <ListBox
                Grid.Column="2"
                ItemsSource="{Binding ImageContainerC.FilteredFiles}"
                Style="{StaticResource ImageListBoxStyle}" />

            <ListBox
                Grid.Column="3"
                ItemsSource="{Binding ImageContainerD.FilteredFiles}"
                Style="{StaticResource ImageListBoxStyle}" />

        </Grid>
    </Grid>
</Window>
